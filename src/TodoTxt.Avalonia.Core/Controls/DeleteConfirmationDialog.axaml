<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TodoTxt.Avalonia.Core.Controls"
        x:Class="TodoTxt.Avalonia.Core.Controls.DeleteConfirmationDialog"
        Title="Confirm Deletion"
        Width="400"
        Height="120"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        CanResize="False">
    
    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Height" Value="23" />
            <Setter Property="TextWrapping" Value="NoWrap" />
        </Style>
        <Style Selector="Button">
            <Setter Property="Height" Value="23"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
        </Style>
    </Window.Styles>

    <StackPanel Orientation="Vertical" Margin="12">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="⚠️" 
                       FontSize="24" 
                       Margin="0,0,8,0" 
                       VerticalAlignment="Center" />
            <TextBlock Text="Permanently delete the selected tasks?" 
                       VerticalAlignment="Center" 
                       FontWeight="Bold" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,16,0,0">
            <Button Content="Yes" 
                    Name="OkButton" 
                    IsDefault="True" 
                    Click="OnOkClick" />
            <Button Content="No" 
                    Name="CancelButton" 
                    IsCancel="True" 
                    Click="OnCancelClick" />
        </StackPanel>
    </StackPanel>
</Window>
