<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TodoTxt.Avalonia.ViewModels"
        xmlns:controls="using:TodoTxt.Avalonia.Core.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TodoTxt.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="todotxt.net"
        Width="562" 
        Height="384">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Name="MainGrid" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="23"/>
        </Grid.RowDefinitions>
        
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Height="23" VerticalAlignment="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGesture="Ctrl+N" Command="{Binding NewFileCommand}"/>
                <MenuItem Header="_Open" InputGesture="Ctrl+O" Command="{Binding OpenFileCommand}"/>
                <MenuItem Header="_Print" InputGesture="Ctrl+P"/>
                <Separator />
                <MenuItem Header="_Archive Completed Tasks" Command="{Binding ArchiveCompletedTasksCommand}"/>
                <MenuItem Header="_Reload File" InputGesture="F5" Command="{Binding ReloadFileCommand}"/>
                <Separator />
                <MenuItem Header="Op_tions..." InputGesture="F10" Command="{Binding ShowOptionsDialogCommand}"/>
                <Separator />
                <MenuItem Header="E_xit" InputGesture="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Cut" InputGesture="Ctrl+X" Command="{Binding CutSelectedTaskCommand}"/>
                <MenuItem Header="Copy" InputGesture="Ctrl+C" Command="{Binding CopySelectedTaskCommand}"/>
                <MenuItem Header="Paste" InputGesture="Ctrl+V" Command="{Binding PasteTasksCommand}"/>
            </MenuItem>
            <MenuItem Header="_Task">
                <MenuItem Header="Add _New Task" Command="{Binding AddTaskCommand}"/>
                <MenuItem Header="_Update Task" Command="{Binding EditSelectedTaskCommand}"/>
                <MenuItem Header="_Delete Task" Command="{Binding DeleteSelectedTaskCommand}"/>
                <Separator />
                <MenuItem Header="Toggle _Completion" Command="{Binding ToggleTaskCompletionCommand}"/>
            </MenuItem>
            <MenuItem Header="_Sort">
                <MenuItem Header="_Order in file" Command="{Binding SortByOrderInFileCommand}"/>
                <MenuItem Header="_Alphabetical" Command="{Binding SortByAlphabeticalCommand}"/>
                <MenuItem Header="_Priority" Command="{Binding SortByPriorityCommand}"/>
            </MenuItem>
            <MenuItem Header="Filter">
                <MenuItem Header="Define _Filters" Command="{Binding ShowFilterDialogCommand}"/>
                <MenuItem Header="_Remove Filter"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Command="{Binding ShowHelpDialogCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Task Input and Search Row -->
        <Grid Grid.Row="1" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            
            <!-- Task Input TextBox -->
            <controls:IntellisenseTextBox Grid.Column="0"
                 Name="TaskTextBox"
                 Text="{Binding TaskInputText}"
                 Watermark="Enter a new task..."
                 VerticalAlignment="Center"
                 Height="25"
                 // Do not touch the foreground
                 Foreground="White"
                 TaskList="{Binding TaskList}"
                 CaseSensitive="{Binding FilterCaseSensitive}"
                 Margin="5,0,0,0"
                 KeyUp="TaskTextBox_KeyUp"/>
            
            <!-- Search TextBox -->
            <TextBox Grid.Column="1"
                 Name="SearchTextBox"
                 Text="{Binding SearchText}"
                 Watermark="Search tasks..."
                 VerticalAlignment="Center"
                 Height="25"
                 // Do not touch the foreground
                 Foreground="White"
                 Margin="5,0,0,0"
                 KeyUp="SearchTextBox_KeyUp"/>
        </Grid>
        
        <!-- Task List -->
        <ListBox Grid.Row="2" 
                 Name="TaskListBox"
                 ItemsSource="{Binding Tasks}"
                 SelectedItem="{Binding SelectedItem}"
                 Margin="0,10,0,0"
                 SelectionMode="Single"
                 DoubleTapped="TaskListBox_DoubleTapped"
                 KeyUp="TaskListBox_KeyUp">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Raw}" TextWrapping="Wrap"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Margin="5,2">
                <TextBlock Text="Tasks:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding FilteredTasks, FallbackValue=0}" Margin="0,0,5,0"/>
                <TextBlock Text="of" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TotalTasks, FallbackValue=0}" Margin="0,0,10,0"/>
                <TextBlock Text="Incomplete:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding IncompleteTasks, FallbackValue=0}" Margin="0,0,10,0"/>
                <TextBlock Text="Overdue:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TasksOverdue, FallbackValue=0}" Foreground="Red" Margin="0,0,10,0"/>
                <TextBlock Text="Due Today:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TasksDueToday, FallbackValue=0}" Foreground="Orange" Margin="0,0,10,0"/>
                <TextBlock Text="Due This Week:" Margin="0,0,5,0"/>
                <TextBlock Text="{Binding TasksDueThisWeek, FallbackValue=0}" Foreground="Blue"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
