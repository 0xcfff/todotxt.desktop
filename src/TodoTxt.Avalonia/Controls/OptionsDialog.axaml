<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TodoTxt.Avalonia.Controls"
        x:Class="TodoTxt.Avalonia.Controls.OptionsDialog"
        Title="Options"
        Width="512"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        CanResize="False">
    
    <Window.Styles>
        <Style Selector="Label">
            <Setter Property="Margin" Value="0,0,0,0"/>            
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
        <Style Selector="Button">
            <Setter Property="Width" Value="75"/>
        </Style>
    </Window.Styles>

    <ScrollViewer>
        <StackPanel Margin="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="23"/>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="23"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="82" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="82" />
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" 
                       Grid.Column="0" 
                       HorizontalAlignment="Left" 
                       Content="Archive File" />
                <TextBox Grid.Row="0" 
                         Grid.Column="1" 
                         Name="ArchiveFileTextBox" />
                <Button Grid.Row="0" 
                        Grid.Column="2" 
                        HorizontalAlignment="Right" 
                        Content="Select..." 
                        Name="SelectArchiveButton" 
                        Click="SelectArchive_Click" />
                
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <CheckBox Content="Automatically archive completed tasks" 
                              Name="AutoArchiveCheckBox" />
                    <CheckBox Content="Automatically select archive path" 
                              Name="AutoSelectArchivePathCheckBox" />
                </StackPanel>
                
                <Label Grid.Row="2" 
                       Grid.Column="0" 
                       Content="Current Font" />
                <TextBox Grid.Row="2" 
                         Grid.Column="1" 
                         Name="CurrentFontDisplayTextBox" 
                         IsReadOnly="True" />
                <Button Grid.Row="2" 
                        Grid.Column="2" 
                        HorizontalAlignment="Right" 
                        Content="Select Font..." 
                        Name="SelectFontButton" 
                        Click="SelectFont_Click" />
            </Grid>
            
            <StackPanel Margin="0,23,0,8">
                <CheckBox Content="Add created date to new tasks" 
                          x:Name="AddCreationDateCheckBox" />
                <CheckBox Content="Move focus to task list after creating new task" 
                          x:Name="MoveFocusToTaskListAfterAddingNewTaskCheckBox" />
                <CheckBox Content="Automatically refresh task list from file" 
                          x:Name="AutoRefreshCheckBox" />
                <CheckBox Content="Filter text is case-sensitive" 
                          x:Name="CaseSensitiveFilterCheckBox" />
                <CheckBox Content="Intellisense project and context suggestions are case-sensitive" 
                          x:Name="IntellisenseCaseSensitiveCheckBox" />
                <CheckBox Content="Minimise to system tray (requires restart)" 
                          x:Name="MinToSysTrayCheckBox" />
                <CheckBox Content="Minimise to system tray on close" 
                          x:Name="MinOnCloseCheckBox" 
                          IsEnabled="{Binding #MinToSysTrayCheckBox.IsChecked}" />
                <CheckBox Content="Enable debug logging" 
                          x:Name="DebugOnCheckBox" />
                <CheckBox Content="Use Ctrl-Enter to create new task" 
                          x:Name="RequireCtrlEnterCheckBox" />
                <CheckBox Content="Allow grouping of tasks" 
                          x:Name="AllowGroupingCheckBox" />
                <CheckBox Content="Preserve leading whitespace and blank lines" 
                          x:Name="PreserveWhiteSpaceCheckBox" />
                <CheckBox Content="Apply word wrap to task list" 
                          x:Name="WordWrapCheckBox" />
                <CheckBox Content="Display status bar" 
                          x:Name="DisplayStatusBarCheckBox" />
                <CheckBox Content="Check for updates on startup" 
                          x:Name="CheckForUpdatesCheckBox" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,16,0,0">
                <Button Content="Cancel" 
                        Name="CancelButton" 
                        Click="OnCancelClick" 
                        IsCancel="True" 
                        Margin="0,0,7,0"/>
                <Button Content="OK" 
                        Name="OkButton" 
                        VerticalAlignment="Bottom" 
                        IsDefault="True" 
                        Click="OnOkClick" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
